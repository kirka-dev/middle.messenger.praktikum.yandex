extends ../layouts/main.pug
include ../components/input/input.pug
include ../components/button/button.pug

block content
    div(class='registration')
        form(class='registration__form')
            h1(class='registration__title') Регистрация
            +input('Почта')(name='email' id='email')
            +input('Логин')(name='login' id='login')
            +input('Имя')(name='first_name' id='first_name')
            +input('Фамилия')(name='second_name' id='second_name')
            +input('Телефон')(name='phone' id='phone')
            +input('Пароль')(name='password' id='password' type='password')
            +input('Пароль (Еще раз)')(type='password')
            +button('Зарегистрироваться')(class='registration__button' type='submit')
            a(class='authorization__link' href='./authorization.pug') Войти
